<h1 align="center">Create new category </h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %> <!-- form_for 헬퍼는 만들어진뒤 post user path 를 필요로함 -->
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :name %> 
		</div>	
		<div class="col-sm-8">
			<%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Enter category name" %>
		</div>
	</div>

		<div class="form group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit class: 'btn btn-primary btn-lg' %>  
			</div>
		</div>


<% end %>

<div class="col-xs-4 col-xs-offset-4">
	<br>
	[ <%= link_to "Cancel request and return", articles_path %> ]
</div>

